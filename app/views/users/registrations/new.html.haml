.row.justify-content-center
  .col-8
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.label :username
        = f.text_field :username, autofocus: true, required: true, class: 'form-control'
      .form-group
        = f.label :email
        = f.email_field :email, autocomplete: "email", required: true, class: 'form-control'
      .form-group
        = f.label :password
        - if @minimum_password_length
          %em
            = t "devise.passwords.password_length", min: @minimum_password_length
        = f.password_field :password, autocomplete: "off", required: true, class: 'form-control'
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off", required: true, class: 'form-control'
      .form-group
        = f.label :fullname
        = f.text_field :fullname, required: true, class: 'form-control'
      .form-group.form-check
        = f.check_box :use_real_name, class: 'form-check-input'
        = f.label :use_real_name, class: 'form-check-label'
      = f.submit "Sign up", class: 'btn btn-primary'
