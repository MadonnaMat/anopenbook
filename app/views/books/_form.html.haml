= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :genre
    = f.number_field :genre
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :current_step
    = f.number_field :current_step
  .field
    = f.label :current_step_ends_at
    = f.datetime_select :current_step_ends_at
  .field
    = f.label :read_count
    = f.number_field :read_count
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
